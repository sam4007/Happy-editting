rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read all user profiles and write their own
    match /users/{userId} {
      // Allow users to read any user document (needed for search and friends)
      allow read: if request.auth != null;
      // Allow users to write only their own document
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow creation of new user documents
      allow create: if request.auth != null;
    }
    
    // Friend requests collection
    match /friendRequests/{requestId} {
      // Allow read/write if user is sender or receiver
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.from || 
         request.auth.uid == resource.data.to ||
         request.auth.uid == request.resource.data.from || 
         request.auth.uid == request.resource.data.to);
      // Allow creation of new friend requests
      allow create: if request.auth != null;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Allow read/write if user is sender or receiver
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId ||
         request.auth.uid == request.resource.data.senderId || 
         request.auth.uid == request.resource.data.receiverId);
      // Allow creation of new messages
      allow create: if request.auth != null;
    }
    
    // Videos collection (if you decide to store videos in Firestore)
    match /videos/{videoId} {
      allow read, write: if request.auth != null;
    }
    
    // User stats or any other user-specific collections
    match /userStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback rule for any other collections - allow all authenticated operations
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}